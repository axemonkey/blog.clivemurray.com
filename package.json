{
  "name": "blog.clivemurray.com",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npx @11ty/eleventy --input=./src --serve",
    "up": "npm-run-all --parallel start watch",
    "debug": "DEBUG=* npx @11ty/eleventy --input=./src",
    "lint-tooling": "npx eslint '*.js' 'tooling/**/*.js'",
    "build": "node tooling/clean.js src && npm-run-all build:*",
    "lint": "npm-run-all lint:* lint-tooling",
    "dev": "npm-run-all lint build && npm-run-all --parallel start watch",
    "watch": "npm-run-all --parallel watch:*",
    "lint:js": "npx eslint src",
    "lint:styles": "npm-run-all prettify stylelint",
    "prettify": "prettier './src/assets/styles/**/*.scss' --write",
    "stylelint": "stylelint './src/assets/styles/**/*.scss' --customSyntax postcss-scss",
    "build:copyassets": "node tooling/copy-assets.js src fonts",
    "build:images": "node tooling/process-images.js src",
    "build:styles": "node tooling/build-css.js src",
    "build:js": "node tooling/build-js.js src",
    "watch:assets": "onchange './src/assets/fonts' -- npm run build:copyassets",
    "watch:images": "onchange './src/assets/images/**/*' -- npm run build:images",
    "watch:styles": "onchange './src/assets/styles/**/*.scss' -- npm-run-all lint:styles build:styles",
    "watch:js": "onchange './src/assets/**/*.js' -- npm-run-all lint:js build:js"
  },
  "keywords": [],
  "author": "",
  "type": "module",
  "license": "ISC",
  "browserslist": [
    ">0.3%, last 5 versions, not dead"
  ],
  "engines": {
    "node": "22"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@springernature/eslint-config": "5.0.5",
    "autoprefixer": "^10.4.14",
    "dayjs": "^1.11.8",
    "eslint": "7.17.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-no-use-extend-native": "0.5.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-unicorn": "28.0.2",
    "markdown-it-abbr": "^2.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-footnote": "^4.0.0",
    "moment": "^2.29.4",
    "npm-run-all2": "^7.0.1",
    "onchange": "^7.1.0",
    "pos": "^0.4.2",
    "postcss": "^8.4.31",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sharp": "^0.33.5",
    "stylelint": "15.10.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard-scss": "9.0.0",
    "stylelint-scss": "4.6.0",
    "svgo": "^3.0.2"
  }
}
