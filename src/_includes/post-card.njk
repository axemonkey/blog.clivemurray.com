{% if post.data.ghost_header_image or post.data.unsplash_post_image %}
	<a class="post-card-image-link" href="{{ post.url | url }}">
		{% if post.data.ghost_header_image %}
			{% include "ghost_postcard_image.njk" %}
		{% else %}
			{% include "unsplash_postcard_image.njk" %}
		{% endif %}
	</a>
{% endif %}

<div class="post-card-content">
	<a class="post-card-content-link" href="{{ post.url | url }}">

		<header class="post-card-header">
			<div class="post-card-primary-tag">{{ post.data.tags[1] }}</div>
			<h2 class="post-card-title">{{ post.data.title }}</h2>
		</header>

		<section class="post-card-excerpt">
			<p>{{ post.data.excerpt }}</p>
		</section>

	</a>

	<footer class="post-card-meta">
		<ul class="author-list">
			<li class="author-list-item">
				<div class="author-name-tooltip">
					Clive Murray
				</div>
				<a href="/about" class="static-avatar">
					<img class="author-profile-image" src="/public/images/size/w100/2022/09/IMG_3364-cropped-bslight.JPG" alt="Clive Murray">
				</a>
			</li>
		</ul>
		<div class="post-card-byline-content">
				<span><a href="/about">Clive Murray</a></span>
				<span class="post-card-byline-date">
					<time datetime="{{ post.date | dateHyphenated }}">{{ post.date | dateReadable }}</time>
					<span class="bull">â€¢</span> 777 min read
				</span>
		</div>
	</footer>
</div>
