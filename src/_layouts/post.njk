---
"permalink": "/{{ slug }}/"
"layoutType": "post"
---
<!DOCTYPE html>
<html lang="en">
<head>
	<title>{{ title }}</title>
	{% include "headparts.njk" %}
</head>
<body class="post-template">

	<div class="site-wrapper">

			{% include "header.njk" %}

			<main id="site-main" class="site-main outer">

				<div class="inner">

					<article class="post-full post">

						<header class="post-full-header">
							{# <section class="post-full-tags"></section> #}

							<h1 class="post-full-title">{{ title }}</h1>

							{% include "byline.njk" %}

						</header>

						{% if unsplash_post_image or ghost_header_image %}
						<figure class="post-full-image">
							{% if unsplash_post_image %}
								{% include "unsplash_post_image_holder.njk" %}
							{% else %}
								{% include "ghost_post_image_holder.njk" %}
							{% endif %}

						</figure>
						{% endif %}

						<section class="post-full-content">

							<div class="post-content">

<!-- BEGIN MARKDOWN OUTPUT -->
{{ content | safe }}
<!-- BEGIN MARKDOWN OUTPUT -->

							</div>

						</section>

					</article>

				</div>

			</main>

			{% include "footer.njk" %}

	</div>

	{% include "script.njk" %}

</body>
</html>
